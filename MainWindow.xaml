                    <!--Dummy data-->
                    <Label.Content >Airalidi</Label.Content>
                </Label>
                <Label x:Name="MaskArmor" Style="{StaticResource ItemArmorStyle}" Grid.Column="2">
                    <Label.Content>130k</Label.Content>
                </Label>
                <TextBlock x:Name="MaskBonus1" Style="{StaticResource BrandBonusTextBlockStyle}" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Margin="0,0,0,20" Padding="3,1,3,1" >
